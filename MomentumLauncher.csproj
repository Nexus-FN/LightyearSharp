<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <DockerDefaultTargetOS>Windows</DockerDefaultTargetOS>
        <ApplicationIcon>cloud.ico</ApplicationIcon>
        <AssemblyName>ChannelLauncher</AssemblyName>
        <RootNamespace>ChannelLauncher</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="DiscordRichPresence" Version="1.1.3.18" />
      <PackageReference Include="Spectre.Console" Version="0.46.1-preview.0.7" />
      <PackageReference Include="Spectre.Console.ImageSharp" Version="0.46.1-preview.0.7" />
      <PackageReference Include="Terminal.Gui" Version="1.9.0" />
    </ItemGroup>

</Project>
